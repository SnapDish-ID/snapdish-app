<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.github.wisemann64.snapdishapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_snap"
        android:name="com.github.wisemann64.snapdishapp.ui.snap.SnapFragment"
        android:label="Snap"
        tools:layout="@layout/fragment_snap" />

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.github.wisemann64.snapdishapp.ui.list.ListFragment"
        android:label="List"
        tools:layout="@layout/fragment_list" />

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.github.wisemann64.snapdishapp.ui.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />
</navigation>